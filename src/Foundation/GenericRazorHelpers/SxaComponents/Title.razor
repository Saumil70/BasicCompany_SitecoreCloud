@using GenericRazorHelpers.SxaHelper
@inherits BaseModelComponent<GenericRazorHelpers.SxaModels.Title.Title>

<div class="component title @Model.Styles @Model.GridParameters" id="@Model.Id">
    <div class="component-content">
        <div class="field-title">
            @if (Model.IsEditing)
            {
                <TextFieldHelper Field="Model.Text" />
            }
            else
            {
                <a href="@Model.Link">@Model.Text.Value</a>
            }
        </div>
    </div>
</div>