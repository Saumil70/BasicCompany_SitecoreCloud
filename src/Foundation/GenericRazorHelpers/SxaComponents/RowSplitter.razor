@using GenericRazorHelpers.PlaceholderHelper
@inherits BaseModelComponent<GenericRazorHelpers.SxaModels.RowSplitter>

<div class="component row-splitter @Model.Styles @Model.GridParameters" id="@Model.Id">
    @foreach (int enabledParameterId in Model.EnabledPlaceholderIds)
    {
        string key = $"row-{enabledParameterId}-{{*}}";
        string styles = $"{Model.ColumnStyles[enabledParameterId - 1]}";

        <div class="container-fluid @styles">
            <div>
                <div class="row">
                    <PlaceholderHelper name="@key"></PlaceholderHelper>
                </div>
            </div>
        </div>
    }
</div>