@using GenericRazorHelpers

@inherits BaseModelComponent<BasicCompany.Feature.BasicContent.Models.PromoCard>

<a href="@Model.Link.Value" class="column promo-column">
    <div class="card">
        <div class="card-image">
            <figure style="background-image: url(@Model.Image?.Value?.Src)"></figure>
        </div>
        <div class="card-content">
            <div class="content">
                <h4>@Model.Headline.Value</h4>
                <p>@((MarkupString)Model.Text.Value)</p>
            </div>
        </div>
    </div>
</a>
