@using BasicCompany.Feature.Products.Models
@using Sitecore.AspNet.RenderingEngine.Extensions
@using Sitecore.LayoutService.Client.Response.Model.Fields
@inherits ComponentBase

@code {
    [Parameter]
    public ItemLinkField<ListProduct> Model { get; set; }
}

<a href="@Model.Url" class="column product-list-column is-4-desktop is-6-tablet">
    <div class="card">
        <div class="card-image">
            <figure style="background-image: url(@Model.Fields.Image.GetMediaLink(new { mw = 480, @as = false }))"></figure>
        </div>
        <div class="card-content">
            <div class="content">
                <h4>@Model.Fields.Title.Value</h4>
                <p>@Model.Fields.ShortDescription.Value</p>
            </div>
        </div>
    </div>
</a>
